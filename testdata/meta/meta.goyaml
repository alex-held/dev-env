{{ $version := 3.1.202 }}
{{ $package := dotnet }}
{{ $install_root := .Meta.GetPkgPath $package $version }}
{{ $link_root := "/usr/local/share/dotnet" }}

package:
    name: {{ $package }}
    version: {{ $version }}

sources:
    - url: https://download.visualstudio.microsoft.com/download/pr/08088821-e58b-4bf3-9e4a-2c04448eee4b/e6e50aff8769ad382ed279730405ee3e/{{$package}}-sdk-{{$version}}-osx-x64.tar.gz
      folder: {{ $install_root }}
      sha256: e67b13b4d6aaf6198188efc2f2c09531555ddbe1

install:
        {{ range .Install }}
    - {{ . }}
            {{ end }}

link:
        {{ range .Links }}
    - {{ . }}
            {{ end }}

about:
    homepage: https://github.com/microsoft/dotnet
    summary: 'Getting image size from png/jpeg/jpeg2000/gif file'
